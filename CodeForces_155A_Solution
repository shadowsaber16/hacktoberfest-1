#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n, ct=0;
    cin>>n;
    int A[n];
    
    for(int i=0; i<n; i++)
    {
        cin>>A[i];
    }
    
    int best=A[0];
    int worst=A[0];
    
    for(int i=1; i<n; i++)
    {
        if(A[i]>best)
        {
            best=A[i];
            ct++;
        }
        
        if(A[i]<worst)
        {
            worst=A[i];
            ct++;
        }
    }
    cout<<ct;
    return 0;   
}
